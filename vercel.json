{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/public/index.php"
    }
  ],
  "build": {
    "env": {
      "ESBUILD_BINARY_PATH": "./node_modules/esbuild/bin/esbuild"
    }
  },
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "/var/task/api/database/database.sqlite"
  },
  "installCommand": "npm install --legacy-peer-deps && cd api && composer install --optimize-autoloader --no-dev",
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}
